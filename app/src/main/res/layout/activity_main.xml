<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:id="@+id/glServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/btnGoogle"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:textOff="@string/google"
                android:textOn="@string/google" />

            <ToggleButton
                android:id="@+id/btnPolly"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:textOff="@string/polly"
                android:textOn="@string/polly" />
        </GridLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etTextToRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/glServices"
            android:layout_marginTop="5dp"
            android:hint="@string/enter_text"
            android:minHeight="100dp"
            android:text="@string/def_text_to_speak"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>